{% extends 'base.html.twig' %}

{% block title %}Your Cart{% endblock %}

{% block body %}
<div class="cart-page-container d-flex flex-column min-vh-100">
    <main class="flex-grow-1 container py-4">
        <h2 class="mb-4"><i class="bi bi-cart4 me-2"></i>Your Shopping Cart</h2>

        {% if cart and cart.cartItems|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% set total = 0 %}
                    {% for item in cart.cartItems %}
                        {% set subtotal = item.product.price * item.quantity %}
                        {% set total = total + subtotal %}
                        <tr>
                            <td class="d-flex align-items-center gap-3">
                                <img src="{{ asset('assets/images/' ~ (item.product.image ?: 'default-product.png')) }}"
                                     alt="{{ item.product.name }}"
                                     width="60" height="60"
                                     style="object-fit: cover; border-radius: 6px;">
                                <span>{{ item.product.name }}</span>
                            </td>
                            <td class="text-center">{{ item.product.price|number_format(2, '.', ',') }} €</td>
                            <td class="text-center">{{ item.quantity }}</td>
                            <td class="text-end">{{ subtotal|number_format(2, '.', ',') }} €</td>
                            <td class="text-center">
                                <form action="{{ path('cart_remove', { cartItemId: item.id }) }}" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th class="text-end">{{ total|number_format(2, '.', ',') }} €</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Continue Shopping
                </a>
                <a href= class="btn btn-primary">
                    Checkout <i class="bi bi-credit-card ms-1"></i>
                </a>
            </div>
        {% else %}
            <div class="text-center py-5 text-muted">
                <i class="bi bi-cart-x display-4 mb-3"></i>
                <p>Your cart is empty.</p>
                <a href="{{ path('app_home') }}" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> Back to Shopping
                </a>
            </div>
        {% endif %}
    </main>

    <footer class="bg-light text-center py-3 mt-auto">
        © Your Store 2025
    </footer>
</div>
{% endblock %}
