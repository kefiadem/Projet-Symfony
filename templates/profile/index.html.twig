{% extends 'base.html.twig' %}

{% block title %}Your Profile{% endblock %}

{% block body %}
    <div class="container py-5" style="margin-top: 60px;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white">
                        <h1 class="h4 mb-0">Your Profile</h1>
                    </div>

                    <div class="card-body">
                        <div class="text-center mb-4">
                            <img src="{{ asset('assets/UserImages/' ~ user.image) }}"
                                 alt="Profile image"
                                 class="rounded-circle"
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        </div>

                        <div class="mb-3">
                            <strong>Username:</strong> {{ user.username }}
                        </div>

                        <div class="mb-3">
                            <strong>Email:</strong> {{ user.email }}
                        </div>

                        {% if user.address %}
                            <div class="mb-3">
                                <strong>Address:</strong> {{ user.address }}
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <strong>Account Status:</strong>
                            <span class="badge {{ user.isVerified ? 'bg-success' : 'bg-warning' }}">
                                {{ user.isVerified ? 'Verified' : 'Not Verified' }}
                            </span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-dark">
                                <i class="bi bi-pencil me-2"></i>Edit Profile
                            </a>
                        </div>

                        {# New Section: Ongoing Orders #}
                        <hr class="my-5">

                        <h2 class="h5 mb-4">Ongoing Orders</h2>

                        {% if orders is not empty %}
                            <div class="list-group">
                                {% for order in orders %}
                                    <div class="list-group-item mb-3 shadow-sm rounded">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <strong>Order #{{ order.id }}</strong>
                                            <span class="badge bg-info text-dark">Ongoing</span>
                                        </div>

                                        <div class="mt-2">
                                            <p><strong>Total Price:</strong> ${{ order.totalPrice ?: 'N/A' }}</p>
                                            <p><strong>Shipping Address:</strong> {{ order.shippingAddress }}</p>
                                            <p><strong>Payment Method:</strong> {{ order.paymentMethod|capitalize }}</p>

                                            <p><strong>Buyer Name:</strong> {{ order.buyerFullName ?: 'N/A' }}</p>
                                            <p><strong>Buyer Email:</strong> {{ order.buyerEmail }}</p>
                                            <p><strong>Buyer Phone:</strong> {{ order.buyerPhone }}</p>

                                            <strong>Items:</strong>
                                            <ul>
                                                {% for item in order.orderItems %}
                                                    <li>{{ item.productName ?: 'Unnamed item' }} - Quantity: {{ item.quantity ?: 1 }}</li>
                                                {% else %}
                                                    <li>No items in this order.</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted">You have no ongoing orders.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
